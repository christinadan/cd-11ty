---
layout: base
---
<article class="wrapper blog-post">
  <header class="post-header">
    {% if categories %}
      {% set categoryList = categories %}
      {% include "partials/category-list.njk" %}
    {% endif %}
    <h1 class="post-title">{{ title }}</h1>
    {% set postDate = page.date %}
    {% include "partials/post-date.njk" %}
  </header>
  <section class="post-content">
    {{ content | safe }}
  </section>
  <section class="tag-section margin-top flex-row">
    <span class="post-meta-label">Filed under </span>
    {% if tags %}
      {% set tagList = tags %}
      {% include "partials/tag-list.njk" %}
    {% endif %}
  </section>
</article>
<div class="wrapper next-previous">
  <nav>
    <ol class="post-nav-list flex-row">
    {%- set previousPost = collections.post | getPreviousCollectionItem(page) %}
      {%- if previousPost %}
      <li class="previous-post">
        <span class="post-meta-label">
          Previous
        </span>
        ← <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
      </li>
      {% endif %}
    {%- set nextPost = collections.post | getNextCollectionItem(page) %}
      {%- if nextPost %}
      <li class="next-post">
        <span class="post-meta-label">
          Next
        </span>
        <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a> →
      </li>
      {% endif %}
    </ol>
  </nav>
</div>
